{
    "name": "Kindl3 filter",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Reading filter simulating Amazon Kindle view, applying black and white color and reducing its brightness to 50%.",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Kindl3 filter",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  